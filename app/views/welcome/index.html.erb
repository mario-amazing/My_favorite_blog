<div class="wrapper wrapper_padding clearfix">
  <div class="col-1 homepage_content">
    <h2>About</h2>
    <hr>
    <p>I'm ror developer living in Minsk</p>
  </div>

  <div class="col-2 homepage_content">

    <h2>Stuff I've written</h2>
    <hr>
    <% @posts.each do |post| %>
      <h3><a href="#"><%= link_to post.title, post %></a></h3>
      <p class="data"><%= post.created_at.strftime("%A, %b, %d") %></p>
    <%end%>
  </div>

  <div class="col-3 homepage_content">
    <h2>Staff I've build</h2>
    <hr>
    <% @projects.each do |projects| %>
      <h3><a href="#"><%= link_to projects.title, projects %></a></h3>
      <p class="data"><%= projects.created_at.strftime("%A, %b, %d") %></p>
    <% end %>
  </div>
</div>
